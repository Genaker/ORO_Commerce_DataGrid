{% set pageSizeOptions = pageSizeOptions|default([10, 25, 50, 100]) %}
{% set initialPageSize = app.request.query.get('pageSize', 10)|default(10) %}
{% if initialPageSize not in pageSizeOptions %}{% set initialPageSize = 10 %}{% endif %}
<div class="grid-page-size mb-2">
    <label>Show <select id="grid-page-size-select" class="form-control form-control-sm" style="width: auto; display: inline-block;">
        {% for opt in pageSizeOptions %}
        <option value="{{ opt }}"{% if opt == initialPageSize %} selected{% endif %}>{{ opt }}</option>
        {% endfor %}
    </select> per page</label>
</div>
